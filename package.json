{
  "name": "surface-2-air-site",
  "version": "0.1.0",
  "description": "The official website of Surface 2 Air",
  "author": "Marty Penner",
  "homepage": "https://surfacetoair.band",
  "private": true,
  "sideEffects": false,
  "main": "infra/index.ts",
  "scripts": {
    "dev": "remix dev --manual -c \"npm run start\"",
    "build": "remix build",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev --compatibility-date=2023-06-21 ./public",
    "typecheck": "tsc",
    "prepare": "husky install",
    "deploy": "mv tsconfig.json tsconfig.bak && mv infra/tsconfig.json tsconfig.json && pulumi up -s prod; mv tsconfig.json infra/ && mv tsconfig.bak tsconfig.json && npm run build && wrangler pages deploy ./public"
  },
  "dependencies": {
    "@pulumi/cloudflare": "^5.19.0",
    "@pulumi/github": "^5.26.0",
    "@pulumi/pulumi": "^3.104.0",
    "@remix-run/cloudflare": "^2.5.1",
    "@remix-run/cloudflare-pages": "^2.5.1",
    "@remix-run/css-bundle": "^2.5.1",
    "@remix-run/react": "^2.5.1",
    "@remix-run/v1-meta": "^0.1.3",
    "@remix-run/v1-route-convention": "^0.1.4",
    "bcryptjs": "^2.4.3",
    "isbot": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "@faker-js/faker": "^8.4.0",
    "@remix-run/dev": "^2.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.1",
    "msw": "^2.1.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sst": "^2.40.1",
    "start-server-and-test": "^2.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2",
    "wrangler": "3.26.0"
  },
  "engines": {
    "node": ">=18 <19"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json}": "prettier --write"
  }
}
