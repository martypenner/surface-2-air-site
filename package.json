{
  "name": "surface-2-air-site",
  "version": "0.1.0",
  "description": "The official website of Surface 2 Air",
  "author": "Marty Penner",
  "homepage": "https://surfacetoair.band",
  "private": true,
  "sideEffects": false,
  "main": "infra/index.ts",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:sst": "sst dev",
    "dev:remix": "sst bind remix dev",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "test": "vitest --passWithNoTests",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "prepare": "husky install",
    "deploy": "mv tsconfig.json tsconfig.bak && mv infra/tsconfig.json tsconfig.json && pulumi up -s prod; mv tsconfig.json infra/ && mv tsconfig.bak tsconfig.json"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@pulumi/cloudflare": "^5.19.0",
    "@pulumi/github": "^5.26.0",
    "@pulumi/pulumi": "^3.0.0",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@remix-run/serve": "^1.19.3",
    "@remix-run/server-runtime": "^1.19.3",
    "bcryptjs": "^2.4.3",
    "isbot": "^3.6.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.3",
    "@types/eslint": "^8.44.2",
    "@types/node": "^18.7.13",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^1.2.2",
    "autoprefixer": "^10.4.15",
    "aws-cdk-lib": "2.110.1",
    "binode": "^1.0.5",
    "constructs": "10.3.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.1.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.14.0",
    "happy-dom": "^10.11.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "msw": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "sst": "^2.39.13",
    "start-server-and-test": "^2.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "engines": {
    "node": ">=18 <19"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md,json}": "prettier --write"
  }
}
